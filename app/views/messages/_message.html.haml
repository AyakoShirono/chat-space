.Message-list__items
  .Message-list__items__message-info
    .Message-list__items__message-info__name
      = message.user.name
    .Message-list__items__message-info__day-and-time
      = message.created_at.strftime("%Y年%m月%d日 %H時%M分")
  .Message-list__items__text
    - if message.content.present?
      %p.Message__content
        = message.content
    = image_tag message.image.url, class: 'Message__image' if message.image.present?